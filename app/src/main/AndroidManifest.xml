<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homebrewerproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/brewer_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/brewer_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomebrewerProject">
        <activity
            android:name=".ABVCalculator"
            android:exported="false" />
        <activity
            android:name=".RecipeList"
            android:exported="true" />
        <activity
            android:name=".RecipeCreator"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>